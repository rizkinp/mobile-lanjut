<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@color/lightpink">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="AboutFragment">

                <LinearLayout
                    android:layout_width="416dp"
                    android:layout_height="700dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="-3dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_marginTop="20dp"
                        android:layout_width="315dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_logopolinema"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/black"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Politeknik Negeri Malang"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Politeknik Negeri Malang (disingkat Polinema) adalah salah satu perguruan tinggi vokasi di Indonesia yang terletak di Kota Malang, Provinsi Jawa Timur. Polinema didirikan pada tahun 1982 dan merupakan salah satu politeknik pertama yang dibangun di Indonesia. Sejak awal berdirinya, Polinema telah fokus pada pendidikan vokasi dan pengembangan keahlian praktis dalam berbagai bidang."
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"
                        android:text="Video Polinema"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnPlay" />

                    <VideoView
                        android:id="@+id/videoView2"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintDimensionRatio="w,16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/videoView2">

                    <ImageView
                        android:id="@+id/maps"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/rounder_background"
                        android:src="@drawable/maps" />

                    <ImageView
                        android:id="@+id/instagram"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:background="@drawable/rounder_background"
                        android:src="@drawable/instagram" />

                    <!-- Tambahkan ImageView baru sesuai kebutuhan -->
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:background="@drawable/rounder_background"
                        android:layout_height="30dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="28dp"
                        android:src="@drawable/google" />
                </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>